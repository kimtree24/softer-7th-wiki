<!--HDFS의 주소와 기본 환경 -->
<!-- “HDFS 서버는 localhost:9000에 있고, 임시 파일은 /hadoop/tmp를 사용”-->

<configuration>
  <property>
  <!-- fs.defaultFS는 바꾸면 안되는 Hadoop 표준키 -->
  <!-- Hadoop이 파일시스템 주소를 찾을 때 오직 fs.defaultFS라는 키만 조회함 -->
    <name>fs.defaultFS</name>
    <value>hdfs://localhost:9000</value>
  </property>

  <property>
    <name>hadoop.tmp.dir</name>
    <value>/hadoop/tmp</value>
  </property>
</configuration>